ScreenManager:
    MainScreen:
    SettingsScreen:

<AddNewSensorContent@MDFloatLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(50)

    MDTextField:
        hint_text: "ID Czujnika"
        # mode: "rectangle"
        pos_hint: {'center_x': .5, 'center_y': .5}
        helper_text: 'xxx-xxx-xxx'
        line_color_focus: 58/255,83/255,155/255,1
        hint_text_color_focus: 58/255,83/255,155/255,1
        md_bg_color: 200/255,245/255,254/255,1

<CustomDialogContent@FloatLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: dp(400)
            
    MDFloatLayout:

        MDRectangleFlatIconButton:
            text: 'Napełnienie'
            icon: 'water'
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .55, 'center_y': 1.55}
            theme_text_color: 'Custom'
            line_color: 0,0,0,0
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            line_color_disabled: 0,0,0,0
            font_style: 'Body2'

        MDProgressBar:
            value: app.water_cm_progress
            pos_hint: {'center_x': .975, 'center_y': 1.55}
            size_hint: 0.25, .03

        MDFlatButton:
            text: app.water_cm_progress_info 
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': 1.175, 'center_y': 1.55}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

        MDFlatButton:
            text: app.water_cm
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': 1.35, 'center_y': 1.55}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

    MDFloatLayout:

        MDRectangleFlatIconButton:
            text: 'Poziom baterii'
            icon: 'battery'
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .58, 'center_y': 1.475}
            theme_text_color: 'Custom'
            line_color: 0,0,0,0
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            line_color_disabled: 0,0,0,0
            font_style: 'Body2'

        MDProgressBar:
            value: 32
            pos_hint: {'center_x': .975, 'center_y': 1.475}
            size_hint: 0.25, .03

        MDFlatButton:
            text: '32 %' 
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': 1.175, 'center_y': 1.475}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

    MDFloatLayout:

        MDFlatButton:
            text: 'Refresh Rate:' 
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .54, 'center_y': 1.375}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

        MDFlatButton:
            id: slider_value_label_info
            text: f"{root.ids.slider.value:.0f}"
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .75, 'center_y': 1.375}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

        MDFlatButton:
            id: slider_time_value_label_info
            text: f"sekund"
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .9, 'center_y': 1.375}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

        MDFlatButton:
            id: slider_value_label 
            text: f"{root.ids.slider.value:.0f}"
            icon_color: 58/255,83/255,155/255,1
            pos_hint: {'center_x': .4, 'center_y': 1.33}
            theme_text_color: 'Custom'
            text_color: 58/255,83/255,155/255,1
            disabled: True
            disabled_color: 58/255,83/255,155/255,1
            font_style: 'Body2'

        MDSlider:
            disabled: True
            id: slider
            pos_hint: {'center_x': .75, 'center_y': 1.33}
            size_hint: .75,1
            hint: True
            hint_bg_color: 58/255,83/255,155/255,1
            hint_text_color: "white"
            hint_radius: 6, 0, 6, 0
            color: 58/255,83/255,155/255,1
            thumb_color_active: 58/255,83/255,155/255,1
            thumb_color_inactive: 58/255,83/255,155/255,1
            value: 0
            max: 61
            min: 1
            on_value: 
                slider_value_label.text = "{}".format(int(self.value))

        MDRaisedButton:
            disabled: True
            size_hint: None, None
            width: dp(2000)  
            height: dp(50)
            id: refresh_rate_data_uptodate_info
            text: "sekund"
            elevation: 0
            pos_hint: {"center_x": 1.25, "center_y": 1.33}
            on_release: app.refresh_rate_time_value_menu_open(root.ids.refresh_rate_data_uptodate_info)

        MDRaisedButton:
            size_hint: None, None
            width: dp(2000)  
            height: dp(50)
            id: change_refresh_rate_button
            text: "Zmień"
            elevation: 0
            pos_hint: {"center_x": 1.25, "center_y": 1.23}
            on_release: app.change_refresh_rate(root.ids.slider,root.ids.change_refresh_rate_button, root.ids.slider_value_label_info,root.ids.refresh_rate_data_uptodate_info,root.ids.refresh_rate_data_uptodate_button,root.ids.slider_time_value_label_info)

        MDRectangleFlatButton:
            size_hint: None, None
            width: dp(2000)  
            height: dp(50)
            id: refresh_rate_data_uptodate_button
            text: "Zauktalizuj dane teraz"
            elevation: 0
            pos_hint: {"center_x": 0.75, "center_y": 1.23}

