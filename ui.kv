        MDFloatLayout:

            MDRectangleFlatIconButton:
                text: 'Poziom baterii'
                icon: 'battery'
                icon_color: 58/255,83/255,155/255,1
                pos_hint: {'center_x': .225, 'center_y': .5}
                theme_text_color: 'Custom'
                line_color: 0,0,0,0
                text_color: 58/255,83/255,155/255,1
                disabled: True
                disabled_color: 58/255,83/255,155/255,1
                line_color_disabled: 0,0,0,0
                font_style: 'Body2'

            MDProgressBar:
                value: 32
                pos_hint: {'center_x': .6, 'center_y': 0.5}
                size_hint: 0.25, 0.1

            MDFlatButton:
                text: '32%'
                icon_color: 58/255,83/255,155/255,1
                pos_hint: {'center_x': .9, 'center_y': .5}
                theme_text_color: 'Custom'
                text_color: 58/255,83/255,155/255,1
                disabled: True
                disabled_color: 58/255,83/255,155/255,1
                font_style: 'Body2'

        MDIconButton:
            icon: 'cog'
            theme_icon_color: "Custom"
            icon_color: 65/255,131/255,215/255,1
            pos_hint: {'center_x': .9}
            icon_size: '20sp'
            on_release: app.show_sensor_settings_dialog(root.panel_name)

<MainScreen>:
    name: 'mainscreen'
    list_view: list_view 

    MDFloatLayout:
        md_bg_color: 129/255, 207/255, 224/255, 1

        ScrollView:
            size_hint: 0.8, 0.9  
            pos_hint: {'center_x': .5}

            MDList:
                md_bg_color: 129/255, 207/255, 224/255, 1
                id: list_view
                spacing: "5dp"

        MDFloatingActionButton:
            icon: "plus"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x": .5, "y": .05}
            on_release: app.show_add_new_sensor_dialog()
            elevation: 0

        MDTopAppBar:
            size_hint_y: .075
            pos_hint: {"center_x": .5, "center_y": .975}
            elevation: 0
            md_bg_color:129/255,207/255,224/255,1

            MDBoxLayout:

                MDLabel:
                    text: 'Witamy'
                    pos_hint: {"center_y": .75}
                    color: 34/255,49/255,63/255,1
                    font_style: 'H6'

                MDIconButton:
                    icon: 'account'
                    pos_hint: {"center_y": .8}
                    color: 34/255,49/255,63/255,1
                    on_release: root.manager.current = 'settingsscreen'

<SettingsScreen>:
    name: 'settingsscreen'
    MDFloatLayout:
        md_bg_color:197/255,239/255,247/255,1
        MDTopAppBar:
            size_hint_y: .075
            pos_hint: {"center_x": .5, "center_y": .975}
            elevation: 0
            md_bg_color:197/255,239/255,247/255,1

            MDBoxLayout:

                MDIconButton:
                    icon: 'arrow-left'
                    pos_hint: {"center_y": .8}
                    color: 34/255,49/255,63/255,1
                    on_release: root.manager.current = 'mainscreen'



        

        
                